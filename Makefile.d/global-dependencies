$(.finite-dir): Makefile
	@sudo npm install eleme/finite -g
	@touch $(.finite-dir)

$(shell which bower):
	@sudo npm install bower -g

$(shell which eslint):
	@sudo npm install eslint -g

$(shell which node-sass):
	@sudo npm install node-sass -g

global-dependencies: $(fucksudo) $(.finite-dir) $(shell which node-sass) $(shell which eslint) $(shell which bower)
	@                                                                                               \
	if [ "$$(uname)" = "Darwin" ]; then                                                             \
	  test -x "$$(which osx-notifier)" || sudo npm install osx-notifier -g;                         \
	fi
